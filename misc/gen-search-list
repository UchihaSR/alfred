#!/usr/bin/env sh

whitelist="\
/home/$USER/Downloads \
/home/git \
/disk/Career \
/disk/Media \
/disk/Phone \
"

blacklist="node_modules\
|/package.json\
|/\.git\
|/\.gitignore\
|LICENSE\
|README.md\
|\.icons\
|\.themes\
|wallpapers/\
|fonts/\
|voidrice/\
|Career/\
|Downloads/\
|Media/\
|Linux/\
"

maxDepth=7

find -L $whitelist -maxdepth $maxDepth |
   grep -Ev $blacklist \
      > "$SEARCH_LIST"
