#!/usr/bin/env sh

palette="/tmp/palette.png"
filters="fps=5,scale=720:-1:flags=lanczos"

ffmpeg -i "$1" -vf "$filters,palettegen" -y $palette
ffmpeg \
   -i "$1" -i $palette -y \
   -lavfi "$filters [x]; [x][1:v] paletteuse" \
   "${1%.*}"-"$(date +'%Y%b%d-%H%M%S')".gif

